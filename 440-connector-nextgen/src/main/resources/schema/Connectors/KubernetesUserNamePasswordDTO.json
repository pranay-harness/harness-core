{
  "allOf": [
    {
      "$ref": "#/definitions/KubernetesAuthCredentialDTO"
    },
    {
      "type": "object",
      "required": [
        "passwordRef"
      ],
      "properties": {
        "passwordRef": {
          "type": "string",
          "pattern": "^(account.)?(org.)?(\\.)?[a-zA-Z0-9_$]*$"
        },
        "username": {
          "type": "string"
        },
        "usernameRef": {
          "type": "string"
        }
      }
    },
    {
      "oneOf": [
        {
          "required": [
            "usernameRef"
          ]
        },
        {
          "required": [
            "username"
          ]
        }
      ]
    }
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}