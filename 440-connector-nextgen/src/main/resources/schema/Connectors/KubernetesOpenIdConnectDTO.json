{
  "allOf": [
    {
      "$ref": "#/definitions/KubernetesAuthCredentialDTO"
    },
    {
      "type": "object",
      "required": [
        "oidcClientIdRef",
        "oidcIssuerUrl",
        "oidcPasswordRef"
      ],
      "properties": {
        "oidcClientIdRef": {
          "type": "string",
          "pattern": "^(account.)?(org.)?(\\.)?[a-zA-Z0-9_$]*$"
        },
        "oidcIssuerUrl": {
          "type": "string"
        },
        "oidcPasswordRef": {
          "type": "string",
          "pattern": "^(account.)?(org.)?(\\.)?[a-zA-Z0-9_$]*$"
        },
        "oidcScopes": {
          "type": "string"
        },
        "oidcSecretRef": {
          "type": "string",
          "pattern": "^(account.)?(org.)?(\\.)?[a-zA-Z0-9_$]*$"
        },
        "oidcUsername": {
          "type": "string"
        },
        "oidcUsernameRef": {
          "type": "string"
        }
      }
    },
    {
      "oneOf": [
        {
          "required": [
            "oidcUsername"
          ]
        },
        {
          "required": [
            "oidcUsernameRef"
          ]
        }
      ]
    }
  ],
  "$schema": "http://json-schema.org/draft-07/schema#"
}