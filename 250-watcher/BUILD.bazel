load("@rules_java//java:defs.bzl", "java_binary")
load("//:tools/bazel/GenTestRules.bzl", "run_tests")
load("//:tools/bazel/macros.bzl", "run_analysis")

shared_dependencies = [
    "@maven//:com_google_guava_guava",
] + [
    "//:lombok",
    "//925-watcher-beans:module",
    "//970-grpc:module",
    "//980-commons:module",
    "@maven//:com_google_inject_guice",
    "@maven//:commons_collections_commons_collections",
    "@maven//:commons_io_commons_io",
    "@maven//:org_apache_commons_commons_lang3",
    "@maven//:org_zeroturnaround_zt_exec",
    "@maven//:org_slf4j_slf4j_api",
    "@maven//:org_slf4j_jul_to_slf4j",
    "@maven//:org_slf4j_log4j_over_slf4j",
    "@maven//:com_squareup_retrofit2_retrofit",
    "@maven//:com_squareup_okhttp3_okhttp",
    "@maven//:com_fasterxml_jackson_core_jackson_databind",
    "@maven//:com_fasterxml_jackson_datatype_jackson_datatype_jsr310",
    "@maven//:com_google_code_findbugs_annotations",
    "@maven//:com_fasterxml_jackson_datatype_jackson_datatype_guava",
    "@maven//:com_fasterxml_jackson_datatype_jackson_datatype_jdk8",
    "@maven//:com_squareup_retrofit2_converter_jackson",
]

java_binary(
    name = "module",
    srcs = glob([
        "src/main/java/**/*.java",
    ]),
    data = ["//:resource"],
    main_class = "io.harness.watcher.app.WatcherApplication",
    resources = [
        "//250-watcher/src/main/resources:resource",
    ],
    visibility = ["//visibility:public"],
    runtime_deps = [
        "//250-watcher/src/main/resources",
        "@maven//:javax_ws_rs_javax_ws_rs_api",
    ],
    deps = shared_dependencies,
)

test_dependencies = [
    "//990-commons-test:module",
    "@maven//:org_awaitility_awaitility",
]

java_library(
    name = "tests",
    testonly = True,
    srcs = glob(["src/test/**/*.java"]),
    data = [
        "//250-watcher/src/test/resources:resource",
    ],
    resources = [
        "//250-watcher/src/test/resources:resource",
    ],
    visibility = ["//visibility:public"],
    deps = test_dependencies + shared_dependencies + [
        "module",
    ],
)

run_tests()

run_analysis()
