ENV APPDYNAMICS_CONTROLLER_SSL_ENABLED=true
ENV APPDYNAMICS_AGENT_APPLICATION_NAME=delegate-app-monitoring
ENV APPDYNAMICS_AGENT_TIER_NAME=delegate-app-tier

WORKDIR /opt/harness-delegate

