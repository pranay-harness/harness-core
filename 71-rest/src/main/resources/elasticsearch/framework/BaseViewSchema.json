{
  "settings" : {
    "index" : {
      "number_of_replicas": 1,
      "number_of_shards": 1
    },
    "analysis": {
      "tokenizer": {
        "camel_case_tokenizer": {
          "type":       "pattern",
          "pattern": "([^\\p{L}\\d]+)|(?<=\\D)(?=\\d)|(?<=\\d)(?=\\D)"
        }
      },
      "analyzer": {
        "camel_case_analyzer": {
          "tokenizer": "camel_case_tokenizer",
          "filter": ["lowercase"]
        }
      }
    }
  },
  "mappings" : {
    "properties" : {
      "accountId" : {"type" : "keyword"},
      "createdBy" : {
        "properties" : {
          "email" : {"type" : "keyword", "index" : false},
          "name" : {"type" : "keyword", "index" : false},
          "uuid" : {"type" : "keyword", "index" : false}
        }
      },
      "lastUpdatedBy" : {
        "properties" : {
          "email": {
            "type": "keyword",
            "index": false
          },
          "name": {
            "type": "keyword",
            "index": false
          },
          "uuid": {
            "type": "keyword",
            "index": false
          }
        }
      },
      "createdAt" : {"type" : "long","index" : false},
      "description"
      : {"type" : "text", "analyzer" : "standard"},
      "id" : {"type" : "keyword"},
      "lastUpdatedAt" : {"type" : "long","index" : false},
      "name" : {"type" : "text", "analyzer": "camel_case_analyzer" },
      "type" : {
        "type" : "keyword",
        "index" : false
      }
    }
  }
}