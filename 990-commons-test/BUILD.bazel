    name = "module",
    testonly = True,
    srcs = glob(["src/main/**/*.java"]),
    resource_jars = [
        ":abstract-module",
    ],
    resources = [
        "//990-commons-test/src/main/resources:resource",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":abstract-module",
        "//:lombok",
        "@jira_client//jar",
        "@maven//:com_bettercloud_vault_java_driver",
