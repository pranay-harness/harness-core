load("@io_bazel_rules_docker//container:container.bzl", "container_image", "container_push")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

container_image(
    name = "container",
    base = "//dockerization/base-jdk:base_jdk",
    cmd = ["./run.sh"],
    tags = [
        "manual",
        "no-cache",
        "no-ide",
    ],
    tars = [
        ":files",
        ":scripts",
    ],
)

pkg_tar(
    name = "files",
    srcs = [
        "//280-batch-processing:batch-processing-config.yml",
    ],
    files = {
        "//280-batch-processing:module_deploy.jar": "batch-processing-capsule.jar",
    },
    mode = "0600",
    owner = "65534.65534",
    package_dir = "/opt/harness",
    tags = [
        "manual",
        "no-cache",
        "no-ide",
    ],
)

pkg_tar(
    name = "scripts",
    srcs = glob([
        "scripts/*",
    ]),
    mode = "0500",
    owner = "65534.65534",
    package_dir = "/opt/harness",
    tags = [
        "manual",
        "no-cache",
        "no-ide",
    ],
)

container_push(
    name = "push",
    format = "Docker",
    image = "batch-processing",
    registry = "us.gcr.io",
    repository = "platform-205701/harness/batch-processing",
    tag = "{STABLE_BUILD_NUMBER}",
    tags = [
        "manual",
        "no-cache",
        "no-ide",
    ],
)
