{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "definitions": {
        "variables": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "enum": [
                            "Secret",
                            "String"
                        ]
                    },
                    "name": {
                        "type": "string"
                    }
                },
                "if": {
                    "properties": {
                        "type": {
                            "const": "Secret"
                        }
                    }
                },
                "then": {
                    "properties": {
                        "secretRef": {
                            "type": "string"
                        }
                    }
                },
                "else": {
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}